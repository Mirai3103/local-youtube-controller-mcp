{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "Node",

    "outDir": "dist",
    "noEmit": false,

    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,

    "baseUrl": "..",
    "paths": {
      "@shared/*": ["shared/*"]
    }
  },

  "include": ["./**/*.ts"]
}
