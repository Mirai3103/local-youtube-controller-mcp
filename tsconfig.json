{
  "compilerOptions": {
    "target": "ESNext",
    "useDefineForClassFields": true,
    "module": "ESNext",
    "moduleResolution": "bundler",
    "strict": true,
    "jsx": "preserve",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "lib": ["ESNext", "DOM"],
    "skipLibCheck": true,
    "noEmit": true,
    "baseUrl": ".",
    "paths": {
      "@shared/*": ["shared/*"]
    }
  },
  "include": [
    "extension/**/*.ts",
    "extension/**/*.d.ts",
    "extension/**/*.tsx",
    "extension/**/*.vue",
    "shared/**/*.ts"
  ],
  "references": [{ "path": "./tsconfig.node.json" }]
}
