{
  "{{chrome}}.manifest_version": 3,
  "{{firefox}}.manifest_version": 2,
  "icons": {
    "16": "icon/16.png",
    "32": "icon/32.png",
    "48": "icon/48.png",
    "96": "icon/96.png",
    "128": "icon/128.png"
  },
  "{{chrome}}.action": {
    "default_popup": "extension/popup.html"
  },
  "{{firefox}}.browser_action": {
    "default_popup": "extension/popup.html"
  },
  "permissions": [
    "tabs",
    "activeTab",
    "scripting"
  ],
  "host_permissions": [
    "*://www.youtube.com/*",
    "*://m.youtube.com/*"
  ],
  "{{firefox}}.permissions": [
    "tabs",
    "activeTab",
    "scripting",
    "*://www.youtube.com/*",
    "*://m.youtube.com/*"
  ],
  "background": {
    "{{chrome}}.service_worker": "extension/background.ts",
    "{{firefox}}.scripts": ["extension/background.ts"]
  },
  "content_scripts": [
    {
      "matches": [
        "*://www.youtube.com/*",
        "*://m.youtube.com/*"
      ],
      "js": ["extension/content.ts"],
      "run_at": "document_end"
    }
  ]
}
